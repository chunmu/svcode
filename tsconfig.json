{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@i18n": ["./src/i18n/index.ts"],
      "@workbench": ["./src/workbench/index.ts"],
      "@electron-sandbox/*": ["./src/electron-sandbox/*"]
    }
  }
}
